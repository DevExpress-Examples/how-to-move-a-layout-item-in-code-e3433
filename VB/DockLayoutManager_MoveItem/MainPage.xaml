<UserControl x:Class="DockLayoutManager_MoveItem.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <dxdo:DockLayoutManager Name="dockLayoutManager1">
        <dxdo:DockLayoutManager.LayoutRoot>
            <dxdo:LayoutGroup Name="Root" Orientation="Vertical">
                <dxdo:LayoutControlItem>
                    <Button x:Name="buttonMove" Content="Click to move item" Click="buttonMove_Click" />
                </dxdo:LayoutControlItem>
                <dxdo:LayoutControlItem x:Name="layoutItemButton1">
                    <Button x:Name="button1" Content="Button 1" />
                </dxdo:LayoutControlItem>
                <dxdo:LayoutControlItem x:Name="layoutItemEditor1">
                    <dxe:ButtonEdit x:Name="editor1" Text="(555) 123 45 67 89" />
                </dxdo:LayoutControlItem>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager.LayoutRoot>
    </dxdo:DockLayoutManager>
</UserControl>
